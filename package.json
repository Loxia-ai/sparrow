{
  "name": "sparrow-sast",
  "version": "1.0.0",
  "description": "Globstar-compatible static analysis tool for Node.js - A backward-compatible reimplementation of the MIT-licensed Globstar.dev SAST",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "sparrow": "./dist/bin/sparrow.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/sparrow.git"
  },
  "homepage": "https://github.com/your-org/sparrow#readme",
  "bugs": {
    "url": "https://github.com/your-org/sparrow/issues"
  },
  "keywords": [
    "static-analysis",
    "sast",
    "security",
    "tree-sitter",
    "linter",
    "code-analysis",
    "globstar",
    "vulnerability-detection"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "tree-sitter": "^0.22.1",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-typescript": "^0.23.2",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-ruby": "^0.23.1",
    "tree-sitter-rust": "^0.23.2",
    "tree-sitter-go": "^0.23.4",
    "tree-sitter-php": "^0.23.11",
    "tree-sitter-bash": "^0.23.3",
    "tree-sitter-c-sharp": "^0.23.1",
    "tree-sitter-html": "^0.23.2",
    "tree-sitter-css": "^0.23.1",
    "js-yaml": "^4.1.0",
    "minimatch": "^9.0.3",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "@types/js-yaml": "^4.0.9",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
